CREATE TABLE IF NOT EXISTS recorded_files (
    id integer NOT NULL CONSTRAINT recorded_files_pk PRIMARY KEY AUTOINCREMENT,
    tuner_id integer NOT NULL,
    channel_id varchar(255) NOT NULL,
    program_name varchar(255) NOT NULL,
    record_size integer NOT NULL,
    start bigint NOT NULL,
    end bigint NOT NULL,
    CONSTRAINT recorded_tuners FOREIGN KEY (tuner_id)
    REFERENCES tuners (id)
);